{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div id="promoForm">{% include 'component/promo.html.twig' %}</div>
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour le</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
            <th>Prix (€)</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
        </tbody>
    </table>

    <div class="inline-btn">

        <a class="back" href="{{ path('profile_product', {'id': app.user.id}) }}"><i class="fa fa-arrow-left" aria-hidden="true"></i>Retour à la liste</a>

        <a class="black" href="{{ path('profile_product_edit', {'userId': app.user.id ,'productId': product.id}) }}">Modifier<i class="fa fa-edit" aria-hidden="true"></i></a>

        <a onClick="popup('promoBtn')">Faire une promo <i class="fa fa-tag"></i></a>

        {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}
