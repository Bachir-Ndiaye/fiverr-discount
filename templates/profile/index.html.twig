{% extends 'base.html.twig' %}

{% block title %}Espace client - {{ user.lastname }}{% endblock %}

{% block body %}


<div id="profile">
	{% for category, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ category }}">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}

<h1>Bienvenue dans votre espace client -
	{{ user.lastname }}
</h1>

<a href="{{ path('profile_product' , {'id': app.user.id }) }}">Mes produits</a>

</div>
{% endblock %}
